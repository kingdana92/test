    <script>
        document.getElementById('place-order-button').addEventListener('click', () => {
            
            const amountInput = document.getElementById('amount-input');
            const amountValue = parseInt(amountInput.value);

            if (!amountValue || amountValue <= 0) {
                amountInput.focus();
                alert("Please enter a valid payment amount.");
                return;
            }

            const btn = document.getElementById('place-order-button');
            const originalText = btn.innerText;
            btn.innerText = "Connecting...";
            btn.disabled = true;

            // Updated Merchant Name to AyeParKwar
            const MMPayApp = new MMPaySDK('pk_live_22c1645968c35c585d6fd56c5aad70eb4fb09b6bb97e33200d2f3932ff453989', {
                baseUrl:  'https://ezapi.myanmyanpay.com', 
                environment:  'pay',
                merchantName:  'AyeParKwar', 
            });

            MMPayApp.showPaymentModal({
                amount: amountValue,
                orderId: 'APK-' + new Date().getTime(), // Prefix updated to APK (AyeParKwar)
                callbackUrl: 'https://ayeparkwar.com/confirmation' 
            }, (result) => {
                
                btn.innerText = originalText;
                btn.disabled = false;

                if (result.success) {
                    btn.innerText = "Payment Success!";
                    btn.style.backgroundColor = "#10B981"; 
                    setTimeout(() => {
                        window.location.href = 'https://ayeparkwar.com/success';
                    }, 1500);
                }
            });
        });
    </script>
